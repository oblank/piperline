{
  "name": "piperline",
  "version": "0.2.2",
  "description": "Simple task pipeline runner.",
  "main": "lib/index.js",
  "scripts": {
    "build": "babel src --out-dir lib",
    "build:browser": "browserify --entry src/index.js --outfile dist/piperline.js --standalone piperline",
    "clean:npm": "rimraf lib",
    "clean:bower": "rimraf dist",
    "package:npm": "npm run clean:npm && npm run lint && npm run build",
    "package:bower": "npm run clean:bower && npm run lint && mkdir -p dist && npm run build:browser",
    "prepublish": "npm run package:npm",
    "lint": "eslint src test/unit --config ./.eslintrc",
    "test": "npm run lint && karma start test/karma.conf.js",
    "test:debug": "npm run lint && karma start test/karma.conf.js --singleRun false"
  },
  "keywords": [
    "async",
    "pipeline",
    "runner"
  ],
  "author": "Tim Voronov <ziflex@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "es6-symbol": "^2.0.1",
    "lodash._basebind": "^2.4.1"
  },
  "devDependencies": {
    "babel-eslint": "^3.1.20",
    "babelify": "^6.1.3",
    "browserify": "^11.0.0",
    "chai": "^3.0.0",
    "chai-spies": "^0.6.0",
    "eslint": "^0.24.0",
    "eslint-plugin-mocha": "^0.4.0",
    "intern": "^2.2.2",
    "karma": "^0.12.37",
    "karma-browserify": "^4.2.1",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^0.2.0",
    "karma-mocha": "^0.2.0",
    "karma-mocha-reporter": "^1.0.2",
    "mocha": "^2.2.5",
    "rimraf": "^2.4.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ziflex/piperline.git"
  },
  "browserify": {
    "transform": [
      [
        "babelify"
      ]
    ]
  }
}
